[color]
  ui = auto

[alias]
  up = pull --rebase
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --graph --decorate --oneline
  lt = describe --abbrev=0 --tags
  put = !git up && git push origin HEAD
